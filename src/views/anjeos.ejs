<%- include("partials/_header") %>
<link rel="stylesheet" href="/styles/index.css"/>
<link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-7">
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr>
              <td>n°</td>
              <td>Pedido</td>
              <td>Altura</td>
              <td>Base</td>
              <td>Tpo</td>
              <td>Color</td>
              <td>Doc</td>
              <td>Acciones</td>
            </tr>
          </thead>
          <tbody>
            <% if (customers) { %> <% for(var i = 0; i < customers.length; i++) {
              %>
            <tr>
              <td><%= (i + 1) %></td>
              <td><%= customers[i].pedido %></td>
              <td><%= customers[i].altura %></td>
              <td><%= customers[i].base %></td>
              <td><%= customers[i].tipo %></td>
              <td><%= customers[i].color %></td>
              <td><%= customers[i].doc %></td>
              <td class="d-flex gap-2">
                <a href="/anjeos/update/<%= customers[i].id %>" class="btn btn-info">
                  Editar
                </a>
                <a href="/anjeos/delete/<%= customers[i].id %>" class="btn btn-danger">
                  Eliminar
                </a>
              </td>
            </tr>
            <% } %> <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-5">
        <div class="card-body">
          <form action="/anjeos/add" method="POST">
            <input
              type="text"
              name="Pedido"
              placeholder="Número Pedido"
              class="form-control mb-2"
              autofocus
            />
            <input
              type="text"
              name="altura"
              placeholder="Altura"
              class="form-control mb-2"
            
            />
            <input
              type="text"
              name="base"
              placeholder="Base"
              class="form-control mb-2"
            />
            <input
              type="text"
              name="tipo"
              placeholder="Tipo de anejo"
              class="form-control mb-2"
            />
            <input
              type="text"
              name="color"
              placeholder="Color del anejo"
              class="form-control mb-2"
            />
            <input
              type="text"
              name="doc"
              placeholder="Número de identificación"
              class="form-control mb-2"
            />
    
            <button type="submit" class="btn btn-info">guardar pedido</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("partials/_footer") %>